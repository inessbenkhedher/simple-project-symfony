                {{ form_widget(f.nomMontage, {'attr': {'class': 'form-control', 'style': 'border-color: #3498db;'}}) }}
                {{ form_errors(f.nomMontage) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(f.client, 'Client', {'label_attr': {'class': 'col-sm-2 control-label text-success'}}) }}
