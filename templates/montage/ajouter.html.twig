{% block title %} Ajouter Montage {% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center">Ajouter Montage</h2><br>

        {{ form_start(f, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(f) }}

        <div class="form-group">
            {{ form_label(f.nomMontage, 'Nom Montage', {'label_attr': {'class': 'col-sm-2 control-label text-primary'}}) }}
