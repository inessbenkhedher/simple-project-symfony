                {{ form_widget(f.created_At, {'attr': {'class': 'form-control', 'style': 'border-color: #f39c12;'}}) }}
                {{ form_errors(f.created_At) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(f.cout, 'Cout', {'label_attr': {'class': 'col-sm-2 control-label text-danger'}}) }}
            <div class="col-sm-10">
                {{ form_widget(f.cout, {'attr': {'class': 'form-control', 'style': 'border-color: #e74c3c;'}}) }}
                {{ form_errors(f.cout) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(f.image, 'Image', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
            <div class="col-sm-10">
                {{ form_widget(f.image, {'attr': {'class': 'form-control', 'style': 'border-color: #3498db;'}}) }}
