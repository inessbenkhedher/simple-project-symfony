{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="text-center">User Registration</h2><br>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.username, 'Username', {'label_attr': {'class': 'col-sm-2 control-label text-primary'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'style': 'border-color: #3498db;'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-2 control-label text-success'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'border-color: #2ecc71;'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'Password', {'label_attr': {'class': 'col-sm-2 control-label text-warning'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'style': 'border-color: #f39c12;'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'col-sm-2 control-label text-danger'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'style': 'border-color: #e74c3c;'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Register!</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
