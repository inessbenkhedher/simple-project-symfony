{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="text-center">Login</h2><br>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label text-primary">Username:</label>
                <div class="col-sm-10">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" style="border-color: #3498db;">
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-sm-2 control-label text-success">Password:</label>
                <div class="col-sm-10">
                    <input type="password" id="password" name="_password" class="form-control" style="border-color: #2ecc71;">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
            
        </form>

         <p class="text-center">
            Don't have an account? <a href="{{ path('user_registration') }}">Create one</a>.
        </p>
    </div>
{% endblock %}
